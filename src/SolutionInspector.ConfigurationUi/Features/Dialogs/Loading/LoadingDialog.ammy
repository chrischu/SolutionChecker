UserControl "SolutionInspector.ConfigurationUi.Features.Dialogs.Loading.LoadingDialog" {
  @StackPanelHorizontal() {
    Margin: 24
    ProgressBar { 
      Style: resource "MaterialDesignCircularProgressBar"
      Margin: "0 0 12 0"
      IsIndeterminate: true
      Value: 0
      Height: 24
      Width: 24
    }
    @Title(bind Message) {
      VerticalAlignment: Center
    }
  }
}