      </ListBox>

    </TabItem>-->

    <TabItem Header="Rules">
      <ItemsControl ItemsSource="{Binding Ruleset.Rules.SolutionRules.Rules}">
        <ItemsControl.ItemTemplate>
          <DataTemplate DataType="{x:Type configuration:RuleViewModel}">
            <Expander>
              <Expander.Header>
                <TextBlock Foreground="White" Text="{Binding Name}" />
              </Expander.Header>
              <StackPanel Orientation="Vertical">
                <TextBlock Margin="0 0 0 10"
                           FontSize="12"
                           Text="{Binding Documentation}"
                           TextWrapping="Wrap" />
                <ItemsControl ItemsSource="{Binding Configuration.Properties}"
                              Grid.IsSharedSizeScope="True"
                              BorderThickness="0 1 0 0"
                              FontSize="14"
                              BorderBrush="Black">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type configuration:RuleConfigurationPropertyViewModel}">
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                BorderThickness="1 0 0.5 1"
                                BorderBrush="Black"
                                Background="LightGray">
                          <StackPanel Margin="2 0">
                            <TextBlock x:Name="propertyTitle"
                                       Text="{Binding Name}"
                                       FontWeight="Bold" />
                            <TextBlock MaxWidth="{Binding ActualWidth,
                                                          ElementName=propertyTitle}"
                                       FontSize="12"
                                       Text="{Binding Documentation}"
                                       TextWrapping="Wrap" />
                          </StackPanel>
                        </Border>
                        <Border Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0.5 0 1 1">
                          <ContentPresenter Content="{Binding Value}" />
                        </Border>
                      </Grid>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </StackPanel>
            </Expander>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </TabItem>
  </TabControl>
</controls:MetroWindow>