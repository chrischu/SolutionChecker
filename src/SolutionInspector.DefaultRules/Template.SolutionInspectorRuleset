<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="solutionInspectorRuleset"
                  type="SolutionInspector.Configuration.SolutionInspectorRuleset, SolutionInspector.Configuration">
      <section name="ruleAssemblyImports"
               type="SolutionInspector.Configuration.RuleAssemblyImports.RuleAssemblyImportsConfigurationSection, SolutionInspector.Configuration" />
      <section name="rules" type="SolutionInspector.Configuration.Rules.RulesConfigurationSection, SolutionInspector.Configuration" />
    </sectionGroup>
  </configSections>

  <solutionInspectorRuleset>
    <ruleAssemblyImports>
      <!-- Assemblies referenced (via NuGet/dll reference) do not have to be imported -->
      <!-- Paths are relative to SolutionInspector.exe -->
      <!-- Example: <import path="File.dll" /> -->
      <!-- When using directories all assemblies (files with an extension of '.dll') are imported -->
      <!-- Example: <import path="Directory" /> -->
    </ruleAssemblyImports>
    <rules>
      <solutionRules>
        <rule type="SolutionInspector.DefaultRules.ProjectGuidsMustBeUniqueRule, SolutionInspector.DefaultRules" />
        <rule type="SolutionInspector.DefaultRules.NuGetPackagesShouldHaveOneVersionAcrossSolutionRule, SolutionInspector.DefaultRules" />
        <rule type="SolutionInspector.DefaultRules.SolutionBuildConfigurationsRule, SolutionInspector.DefaultRules"
              expectedConfigurations="Debug,Release" expectedPlatforms="Any CPU" />
      </solutionRules>
      <projectRules>
        <projectRuleGroup appliesTo="*">
          <rule type="SolutionInspector.DefaultRules.ProjectShouldNotContainProjectItemsWithDuplicateIncludesRule, SolutionInspector.DefaultRules" />

          <rule type="SolutionInspector.DefaultRules.ProjectShouldNotContainProjectPropertiesWithDuplicateNameRule, SolutionInspector.DefaultRules" />
          
          <rule type="SolutionInspector.DefaultRules.ProjectItemsMustBePresentRule, SolutionInspector.DefaultRules" />

          <rule type="SolutionInspector.DefaultRules.NuGetReferenceHintPathsMustBeValidRule, SolutionInspector.DefaultRules" />

          <rule type="SolutionInspector.DefaultRules.NonDevelopmentNuGetReferencesShouldHaveIsPrivateSetToTrueRule, SolutionInspector.DefaultRules" />

          <rule type="SolutionInspector.DefaultRules.ProjectReferencesMustBeValidRule, SolutionInspector.DefaultRules" />

          <rule type="SolutionInspector.DefaultRules.ProjectPropertyRule, SolutionInspector.DefaultRules"
                property="AppDesignerFolder" expectedValue="Properties" />

          <rule type="SolutionInspector.DefaultRules.ProjectBuildConfigurationDependentPropertyRule, SolutionInspector.DefaultRules"
                buildConfigurationFilter="Debug|*" property="Optimize" expectedValue="false" />

          <rule type="SolutionInspector.DefaultRules.RequiredCompilationSymbolsProjectRule, SolutionInspector.DefaultRules">
            <requiredCompilationSymbols buildConfigurationFilter="*|*" requiredCompilationSymbols="TRACE" />
          </rule>

          <rule type="SolutionInspector.DefaultRules.RequiredNuGetPackagesRule, SolutionInspector.DefaultRules"
                requiredNuGetPackages="SomeNuGetPackage" />

          <rule type="SolutionInspector.DefaultRules.ProjectXPathRule, SolutionInspector.DefaultRules"
                xPath="boolean(//Compile)" ignoreNamespaces="true" />

          <rule type="SolutionInspector.DefaultRules.RequiredResourceLanguagesRule, SolutionInspector.DefaultRules"
                requiredResources="Resource,OtherResource" requiredLanguages="de,cs" />
        </projectRuleGroup>
        <projectRuleGroup appliesTo="+*;-*Tests;-*TestInfrastructure">
          <rule type="SolutionInspector.DefaultRules.ProjectMustProvideXmlDocumentationRule, SolutionInspector.DefaultRules" />
          <rule type="SolutionInspector.DefaultRules.ProjectConfigFileShouldHaveCorrectFrameworkVersionRule, SolutionInspector.DefaultRules"
                expectedVersion="v4.0" expectedSKU=".NETFramework,Version=v4.6.1" />
        </projectRuleGroup>
        <projectRuleGroup appliesTo="*UnitTests">
          <rule type="SolutionInspector.DefaultRules.ProjectPropertyRule, SolutionInspector.DefaultRules"
                property="TestProjectType" expectedValue="UnitTest" />
        </projectRuleGroup>
      </projectRules>
      <projectItemRules>
        <projectItemRuleGroup appliesTo="*.filextension" inProject="*">
          <rule type="SolutionInspector.DefaultRules.ProjectItemMustHaveCustomToolSetRule, SolutionInspector.DefaultRules"
                expectedCustomTool="CustomTool" expectedCustomToolNamespace="CustomToolNamespace" />
          <rule type="SolutionInspector.DefaultRules.ProjectItemMustHaveCorrectBuildActionRule, SolutionInspector.DefaultRules"
                expectedBuildAction="Compile" />
          <rule type="SolutionInspector.DefaultRules.ProjectItemMustNotBeIncludedByWildcardRule, SolutionInspector.DefaultRules" />
        </projectItemRuleGroup>
      </projectItemRules>
    </rules>
  </solutionInspectorRuleset>
</configuration>